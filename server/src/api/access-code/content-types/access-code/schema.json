{
  "kind": "collectionType",
  "collectionName": "access_codes",
  "info": {
    "singularName": "access-code",
    "pluralName": "access-codes",
    "displayName": "AccessCode",
    "description": "PIN access codes for survey"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "code": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "label": {
      "type": "string"
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "expiresAt": {
      "type": "datetime"
    },
    "maxUses": {
      "type": "integer"
    },
    "usesCount": {
      "type": "integer",
      "default": 0
    },
    "lastUsedAt": {
      "type": "datetime"
    }
  }
}
